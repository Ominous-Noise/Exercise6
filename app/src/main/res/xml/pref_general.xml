<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category">


        <ListPreference
            android:key="example_list"
            android:title="@string/pref_format"
            android:summary="@string/pref_format_hint"
            android:defaultValue="1"
            android:entries="@array/pref_date_formats"
            android:entryValues="@array/pref_date_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

        <CheckBoxPreference
            android:key="example_checkbox"
            android:title="@string/pref_delete"
            android:defaultValue="true" />

    </PreferenceCategory>



</PreferenceScreen>
